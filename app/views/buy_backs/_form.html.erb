
<%= form_with(model: buy_back, local: true) do |form| %>
  <% if buy_back.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(buy_back.errors.count, "error") %> prohibited this buy_back from being saved:</h2>
      <ul>
      <% buy_back.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      </div>
  <% end %>



      <div class="container" id='main'>
        <form>
      <div class='form-group'>
        <div class="row">
          <div class="col-lg-4">
            <%= form.label :first_name %>
              </div>
              <div class="lg-xs-8">
                <%= form.text_field :first_name, id: :buy_back_first_name %>
              </div>
            </div>
            </div>
            <div class="form-group">
            <div class="row">
              <div class="col-lg-4">
                <%= form.label :middle_name %>
              </div>
              <div class="col-xs-8">
                <%= form.text_field :middle_name, id: :buy_back_middle_name %>
              </div>
            </div>
            </div>
            <div class="form-group">
            <div class="row">
              <div class="col-lg-4">
                <%= form.label :last_name %>
              </div>
              <div class="col-xs-8">
                <%= form.text_field :last_name, id: :buy_back_last_name %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-lg-4">
                <%= form.label :address %>
              </div>
              <div class="col-xs-8">
                  <%= form.text_field :address, id: :buy_back_address %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-lg-4">
                  <%= form.label "Address #2" %>
                  </div>
                  <div class="col-xs-8">
                    <%= form.text_field :address_two, id: :buy_back_address_two %>
                  </div>
                </div>
              </div>

 <div class="form-group">
   <div class="row">
    <div class="col-lg-4">
    <%= form.label :city %>
    </div>
    <div class="col-xs-8">
    <%= form.text_field :city, id: :buy_back_city %>
  </div>
  </div>
  </div>

 <div class="form-group">
   <div class="row">
       <div class="col-lg-4">
    <%= form.label :state %>
    </div>
    <div class="col-xs-8">
    <%= form.text_field :state, id: :buy_back_state %>

</div>
</div>
</div>

 <div class="form-group">
   <div class="row">
      <div class="col-lg-4">
    <%= form.label :zip_code %>
    </div>
    <div class="col-xs-8">
    <%= form.text_field :zip_code, id: :buy_back_zip_code %>
  </div>
</div>
</div>
 <div class="form-group">
   <div class="row">
       <div class="col-lg-4">
    <%= form.label :email %>
    </div>
  <div class="col-xs-8">
    <%= form.text_field :email, id: :buy_back_email %>
  </div>
  </div>

  <div class="container">
  <div class="row">
    <div class="col-xs-12">
  <%= form.add_nested_fields_link :devices, 'Add More Devices' %>
</div>
</div>
</div>

  <%= form.nested_fields_for :devices, wrapper_tag: :div do | new | %>
  <div class="form-group" id="devices-form">
    <div class="row">
      <div class="col-xs-3"
      <strong>Qty</strong>
      <%= new.text_field :quantity %> <%= new.remove_nested_fields_link %> <br>
      </div>
        <div class="col-xs-3"
        <strong>Carrier</strong>
        <%= new.text_field :carrier%> <%= new.remove_nested_fields_link %> <br>
        </div>
        <div class="col-xs-3">
          <strong>Model</strong>
          <%= new.text_field :device_name%>  <%= new.remove_nested_fields_link %> <br>
          </div>
        <div class="col-xs-3">
            <strong>IMEI</strong>
             <%= new.text_field :imei %>  <%= new.remove_nested_fields_link %><br>
             </div>
       <div class="col-xs-3">
                   <strong>Price </strong>
                    <%= new.text_field :price%> <%= new.remove_nested_fields_link %> <br>
          </div>
      </div>
  <hr>

  <% end %>



  <div>
    <p> Do you agree that the information you provided is truthful to the best of your ability, that you may be contacted if there are issues with the device and possibly asked to provide a refund? *
      </p>
      <input type="checkbox">
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col">
    <%= form.label "Driver's License" %>
    </div>
        <div class="col">
    <%= form.text_field :drive_license, id: :buy_back_drive_license %>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col">
          <%= form.label "Upload ID"%>
          <%= form.file_field :image %>

          <% if @buy_back.image? %>
          <%= image_tag @buy_back.image.url, class: "id-show" %>
            <%= form.check_box :remove_image %>
            remove image
            <% end %>
          </div>
          </div>
          </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col">
      <%= form.button :submit %>
      </div>
      </div>
    </div>
    <div class="form-group">



<% end %>
</form>
</div>
