<p id="notice"><%= notice %></p>


<div class="container">
  <h4>Buy Backs</h4>
<table class="table">
 <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Drive license</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buy_backs.each do |buy_back| %>
      <tr>
        <td><%= buy_back.first_name %></td>
        <td><%= buy_back.last_name %></td>
        <td><%= buy_back.email %></td>
        <td><%= buy_back.drive_license %></td>
        <td><%= link_to 'Show', buy_back %></td>
        <td><%= link_to 'Edit', edit_buy_back_path(buy_back) %></td>
        <td><%= link_to 'Destroy', buy_back, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Buy Back', new_buy_back_path %>
</div>
